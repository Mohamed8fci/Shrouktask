@model ShaTask.ViewModels.InvoiceDto

<h2>Edit Invoice</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Invoicedate"></label>
        <input asp-for="Invoicedate" class="form-control" />
        <span asp-validation-for="Invoicedate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CashierId"></label>
        <select asp-for="CashierId" asp-items="@ViewBag.Cashiers" class="form-control"></select>
        <span asp-validation-for="CashierId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BranchId"></label>
        <select asp-for="BranchId" asp-items="@ViewBag.Branches" class="form-control"></select>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>
    <h3>Items</h3>
    @for (int i = 0; i < Model.InvoiceDetails.Count; i++)
    {
        <div class="form-group">
            <label asp-for="InvoiceDetails[i].ItemName"></label>
            <input asp-for="InvoiceDetails[i].ItemName" class="form-control" />
            <span asp-validation-for="InvoiceDetails[i].ItemName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InvoiceDetails[i].ItemCount"></label>
            <input asp-for="InvoiceDetails[i].ItemCount" class="form-control" />
            <span asp-validation-for="InvoiceDetails[i].ItemCount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InvoiceDetails[i].ItemPrice"></label>
            <input asp-for="InvoiceDetails[i].ItemPrice" class="form-control" />
            <span asp-validation-for="InvoiceDetails[i].ItemPrice" class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
<a href="@Url.Action("Index", "Invoice")" class="btn btn-primary">Back to List</a>
