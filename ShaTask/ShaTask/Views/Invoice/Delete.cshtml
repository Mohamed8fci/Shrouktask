@model InvoiceHeader

<h2>Delete Invoice</h2>

<div>
    <h4>Are you sure you want to delete this invoice?</h4>
    <h5>Invoice ID: @Model.Id</h5>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Customer Name</dt>
            <dd class="col-sm-10">@Model.CustomerName</dd>

            <!-- Display other invoice details here -->
        </dl>
    </div>

    <form method="post" action="@Url.Action("Delete", "Invoice", new { id = Model.Id })">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Invoice")" class="btn btn-primary">Cancel</a>
    </form>
</div>